<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentStatementActivity">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:text="@string/exit"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/currentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/currentName">

        <Button
            android:id="@+id/editStatement"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/edit" />

        <Button
            android:id="@+id/deleteStatement"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/delete" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/relativeLayoutCurrentVictimEditTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lineText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText1"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText2"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText3"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText4"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText5"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText6"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText7"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText8"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText9"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineText11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineText10"
                android:orientation="horizontal"
                android:gravity="start">
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>